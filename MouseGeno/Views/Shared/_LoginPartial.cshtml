@using Microsoft.AspNetCore.Identity
@using MouseGeno.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <a asp-area="" asp-controller="Manage" asp-action="Index" title="Manage" style="color: lightgray"><strong>@UserManager.GetUserName(User)</strong></a>
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link" style="color: lightgray"><strong>Log out</strong></button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-area="" asp-controller="Account" asp-action="Register" style="color: #842927"><strong>Register</strong></a></li>
        <li><a asp-area="" asp-controller="Account" asp-action="Login" style="color: #842927"><strong>Log in</strong></a></li>
    </ul>
}
