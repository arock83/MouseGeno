@model MouseGeno.Models.Mouse

@{
    ViewData["Title"] = "Delete";
}
<div class="container clearBackground">
    <h2>Delete Mouse # @Model.EarTag</h2>

    <h3>Are you sure you want to delete this?</h3>
    <div>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.EarTag)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ToeClip)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Sex)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Birth)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Death)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Mom)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Dad)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PK1)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PK2)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.SynCre)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Line)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        @Html.DisplayFor(model => model.EarTag)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.ToeClip)
                    </td>
                    <td>
                        @if (Model.Sex == "F")
                        {
                            <p><strong>&#9792; F</strong></p>
                        }
                        else if (Model.Sex == "M")
                        {
                            <p><strong>&#9794; M</strong></p>

                        }
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.Birth)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.Death)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.Mom.EarTag)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.Dad.EarTag)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.PK1.ShortHand)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.PK2.ShortHand)
                    </td>
                    <td>
                        @if (Model.SynCre == true)
                        {
                            <p> + </p>

                        }
                        else if (Model.SynCre == false)
                        {
                            <p> - </p>

                        }
                        else
                        {
                            <p> </p>

                        }
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.Line.Name)
                    </td>
                </tr>
            </tbody>
        </table>

    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="MouseID" />
        <input type="submit" value="Delete" class="btn btn-default custBtn" /> 
    </form>
    <button class="custBtn" onclick="location.href='@Url.Action("Details", "Lines", new {id = Model.LineID })'">
        <p>Back to Line </p>
    </button>
</div>
